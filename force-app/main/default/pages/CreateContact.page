<apex:page standardController="Contact">
    <apex:form >
        <apex:pageBlock >
            <apex:inputField value="{!Contact.FirstName}" label="FirstName"/>
            <apex:inputField value="{!Contact.LastName}" label="LastName"/>
            <apex:inputField value="{!Contact.Email}" label="Email"/>
            <apex:commandButton action="{!Save}" value="Save"/>
        </apex:pageBlock>
    </apex:form>
</apex:page>